<div id="login">

    <div class="container">

        {{>navLogin}}

        <div class="sectionHead">
            <img src="/images/welcome.gif" alt="Your Games" class="sectionImage">
        </div>

        <hr class="blueLine">

        <div class="container">

            <form class="px-4 py-3" id="signin" method="POST" action="/login">

                <div class="form-group">

                    <label for="FormUser">Username</label>

                    <input name="username" class="form-control" id="FormUser">

                </div>

                <div class="form-group">

                    <label for="FormPass">Password</label>

                    <input name="password" type="password" class="form-control" id="FormPassword1">

                </div>

                <hr>

                <div class="form-check">

                    <input type="checkbox" class="form-check-input" id="dropdownCheck">

                    <label class="form-check-label" for="dropdownCheck">

                        Remeber Me

                    </label>

                </div>

                <hr>

                <button type="submit" class="btn btn-primary" value="Sign In">Sign In</button>

            </form>

            <div class="dropdown-divider"></div>

            <a class="dropdown-item" href="#">Ahh, a Newbie? Join us, we have cookies!</a>

            <a class="dropdown-item" href="#">Can't unlock yer loot?</a>

        </div>

    </div>

</div>