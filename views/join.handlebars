<div id="join">

    <div class="container">

        {{>navJoin}}

        <div class="sectionHead">
            <img src="/images/join.gif" alt="Join the Force!" class="sectionImage">
        </div>

        <hr class="blueLine">

        <div class="container">

            <form class="px-4 py-3" id="join" method="POST" action="/join">

                <div class="form-group">

                    <label for="FormEmail">How Do We Reach Ya? (Email Please)</label>

                    <input name="email" type="email" class="form-control" id="FormEmail">

                </div>

                <div class="form-group">

                    <label for="FormName">Pick Yer Name</label>

                    <input name="username" type="username" class="form-control" id="FormUser">

                </div>


                <div class="form-group">

                    <label for="ForPass">Please Don't Make It "Password" -_-</label>

                    <input name="password" type="password" class="form-control" id="FormPassword2">

                </div>

                <hr>

                <button type="submit" class="btn btn-primary" value="join">Sign Up</button>

            </form>

        </div>

    </div>